<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/title_text_color_grey1"
        android:layout_marginTop="20dp"
        android:textSize="12dp" />

    <View
        android:id="@+id/view_choose"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@id/tv_way"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/drawable_circle_alpha" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_below="@id/tv_way"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="123"
        android:textColor="@color/loock_yellow_alpha"
        android:textSize="12dp" />

    <View
        android:id="@+id/view_exist"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_below="@id/tv_date"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/drawable_circle" />
</RelativeLayout>